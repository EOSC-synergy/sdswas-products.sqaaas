<!-- Homepage dust products -->
<section id="products-banner" class="bg-color-seaweed-dark"
        tal:define="items python:view.products()">

    <div class="main-wrap main-padding main-padding-tb">

        <div class="home-dupro-container main-container">

            <!-- Homepage dust products main -->
            <div class="home-dupro-main">

                <h2 class="home-dupro-main-title">Dust Products</h2>

                <p class="home-dupro-main-description">
                    The Barcelona Dust Regional Center offers a wide range of dust products that serve the need for detailed dust information on a regional scale.</p>
                <a class="home-dupro-main-cta"
                    tal:attributes="href string:${context/portal_url}/products"  target="_self">
                    <p>Learn more</p>
                </a>
            </div><!-- Homepage dust products main ends -->

            <!-- Homepage dust products cards container -->
            <div class="home-dupro-cards-container">

                <tal:row tal:repeat="item items">

                    <metal:macro use-macro="context/product_utils/macros/banner_card"/>

                </tal:row>

            </div><!-- Homepage dust products cards container ends -->

        </div>
    </div>
</section><!-- Homepage dust products ends -->
